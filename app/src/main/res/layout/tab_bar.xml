<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SwitchTabActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tab_bar_fragment_content"
        android:layout_above="@id/tab_bar_separator"
        />
    <View
        android:id="@+id/tab_bar_separator"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_above="@id/tab_bar_bottomtab"
        android:background="#C2C5CE"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/tab_bar_bottomtab"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <RadioGroup
            android:layout_marginTop="4dp"
            android:id="@+id/tab_bar_navcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/tab_bar_index"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:button="@null"
                android:clickable="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_index_bg"
                android:onClick="switchView"
                android:text="信息"
                android:textColor="@drawable/nav_menu_color"
                android:textSize="20sp"
                />
            <RadioButton
                android:id="@+id/tab_bar_info_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:button="@null"
                android:clickable="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_info_in_bg"
                android:onClick="switchView"
                android:text="入库信息"
                android:textColor="@drawable/nav_menu_color"
                android:textSize="20sp"
                />
            <RadioButton
                android:id="@+id/tab_bar_info_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:button="@null"
                android:clickable="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/nav_menu_info_out_bg"
                android:onClick="switchView"
                android:text="出库信息"
                android:textColor="@drawable/nav_menu_color"
                android:textSize="20sp"
                />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>
